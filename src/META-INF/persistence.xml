<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="sqlserver">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>br.com.jsmartmarket.jpa.model.Cliente</class>
		<class>br.com.jsmartmarket.jpa.model.Produto</class>
		<class>br.com.jsmartmarket.jpa.model.Compra</class>
		<class>br.com.jsmartmarket.jpa.model.Pagamento</class>
		<class>br.com.jsmartmarket.jpa.model.ItensCompra</class>
		<class>br.com.jsmartmarket.jpa.model.Uf</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>

</persistence>